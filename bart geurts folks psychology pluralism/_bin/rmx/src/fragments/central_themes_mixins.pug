mixin slideTopicTable(p)
  if typeof(p) === 'undefined'
    - p = {}
  +slide_middle
    +topicTable
    +hide('.q:gt('+(p.step-1)+')', 0)
    +blur('tbody tr:not(:eq('+(p.step-2)+'))', '2px', 0)
    .slide
      +blur('tr:eq('+(p.step-1)+')')
      +unblur('tr:eq('+p.step+')')
      +show('.q:eq('+p.step+')')



