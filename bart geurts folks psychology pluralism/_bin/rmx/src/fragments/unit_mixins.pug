mixin circleType(selector)
  script(defer=true): :coffee-script
    selector = `${selector}`
    theAction = () ->
      setTimeout () ->
        if $?
          elements = $(selector)
          for el in elements
            new CircleType(el)
        else
          # try again later
          theAction()
      , 25
    theAction()

